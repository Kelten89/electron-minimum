{
  "name": "my-electron-app",
  "version": "1.0.0",
  "description": ".",
  "author": ".",
  "main": "./build/index.js",
  "scripts": {
    "pre-build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "yarn pre-build && electron ./build/index.js",
