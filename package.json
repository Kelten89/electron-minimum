{
  "name": "my-electron-app",
  "version": "1.0.1",
  "description": ".",
  "author": ".",
  "main": "./build/index.js",
  "scripts": {
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "tsc && electron .",
    "dev": "concurrently \"tsc -w\" \"nodemon --exec electron .\"",
    "build": "tsc && electron-builder",
    "release": "tsc && electron-builder --publish=always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Kelten89/electron-minimum.git"
  },
  "build": {
    "appId": "com.example.app",
    "directories": {
      "buildResources": "assets"
    },
    "productName": "ytimTest",
    "files": [
      "build/**/*",
      "package.json"
    ],
    "publish": {
      "provider": "github"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": true,
      "shortcutName": "ytimShortcut",
      "uninstallDisplayName": "ytimUninstall"
    }
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "electron": "^21.1.0",
    "electron-builder": "^23.6.0",
    "nodemon": "^2.0.20",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0"
  }
}
