    "files": [
      "build/**/*",
      "package.json"
    ]
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "cross-env": "^7.0.3",
    "electron": "^21.1.0",
    "electron-builder": "^23.6.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0"
  }
}
